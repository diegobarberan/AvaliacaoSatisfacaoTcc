@model AvaliacaoDesempenho.Models.Curso

@{
    ViewData["Title"] = "Excluir Curso";
}

<h1>Excluir Curso</h1>

<h3>Tem certeza de que deseja excluir?</h3>
<div>
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nivel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nivel)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Codigo" />
        <input type="submit" value="Excluir" class="btn btn-outline-danger" /> |
        <a class="btn btn-outline-primary" asp-action="Index">Voltar para Lista</a>
    </form>
</div>
