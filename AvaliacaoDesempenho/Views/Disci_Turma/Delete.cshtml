@model AvaliacaoDesempenho.Models.Disci_Turma

@{
    ViewData["Title"] = "Excluir Disciplina da Turma";
}

<h1>Excluir Disciplina da Turma</h1>

<h3>Tem certeza de que deseja excluir?</h3>
<div>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Turma)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Turma.Nome)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Disciplina)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Disciplina.Nome)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Professor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Professor.Email)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Codigo" />
        <input type="submit" value="Excluir" class="btn btn-outline-danger" /> |                   
        <a class="btn btn-outline-primary" asp-action="Index" asp-route-id="@Model.TurmaId">Voltar pra Lista</a>
    </form>
</div>
