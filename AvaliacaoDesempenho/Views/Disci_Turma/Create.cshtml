@model AvaliacaoDesempenho.Models.Disci_Turma

@{
    ViewData["Title"] = "Criar nova Disciplina para Turma";
}

<h1>Criar nova Disciplina para Turma</h1>

@if (ViewData["Falha"] != null)
{
    <script type="text/javascript">
        alert('Disciplina já cadastrada para esta turma!');
    </script>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TurmaId" class="control-label"></label>
                <select asp-for="TurmaId" class="form-control" asp-items="ViewBag.TurmaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DisciplinaId" class="control-label"></label>
                <select asp-for="DisciplinaId" class="form-control" asp-items="ViewBag.DisciplinaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProfessorId" class="control-label"></label>
                <select asp-for="ProfessorId" class="form-control" asp-items="ViewBag.ProfessorId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a class="btn btn-outline-primary" asp-action="Index" asp-route-id="@TempData.Peek("CodTurma")">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
