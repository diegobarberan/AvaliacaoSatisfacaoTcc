@model AvaliacaoDesempenho.Models.AppUserRole

@{
    ViewData["Title"] = "Excluir Perfil Usuário";
}

<h1>Exclui Perfil Usuárior</h1>

<h3>Tem certeza de que deseja excluir?</h3>
<div>
    <h4>Perfil Usuário</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Role.Id)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="RoleId" />
        <input type="submit" value="Excluir" class="btn btn-outline-danger" /> |
        <a asp-action="Index">Voltar para Lista</a>
    </form>
</div>
